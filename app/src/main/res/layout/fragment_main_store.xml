<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.square.store.MainStoreFragment">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.dustoreapplication.android.view.SlideShowImageView
            android:id="@+id/main_store_slide_iv"
            android:layout_width="match_parent"
            android:layout_height="170dp"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TableRow
                android:id="@+id/main_store_news_row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">
                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    layout="@layout/item_store_news"/>
                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    layout="@layout/item_store_news"/>
                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    layout="@layout/item_store_news"/>
                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    layout="@layout/item_store_news"/>
            </TableRow>
            <TableRow
                android:id="@+id/main_store_news_row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">
                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    layout="@layout/item_store_news"/>
                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    layout="@layout/item_store_news"/>
                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    layout="@layout/item_store_news"/>
                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    layout="@layout/item_store_news"/>
            </TableRow>
        </TableLayout>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/main_store_advertising_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_store_good_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:background="@color/light_gray"/>
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>